<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >
    
    <ImageView 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/test"/>
    	
    <LinearLayout
    	android:layout_width="wrap_content"
    	android:layout_height="match_parent"
    	android:orientation="vertical">
    	<LinearLayout 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal">
    		<Button 
		        android:id="@+id/detect_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text = "detect"/>
	        <Button 
		        android:id="@+id/compare_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft = "25dp"
		        android:text = "compare two face"/>
		    <Button 
		        android:id="@+id/recognized_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft = "25dp"
		        android:text = "recognize"/>
	        <Button 
		        android:id="@+id/search_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft = "25dp"
		        android:text = "search"/>
	        <Button 
		        android:id="@+id/train_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft = "25dp"
		        android:text = "train"/>
	        <Button 
		        android:id="@+id/verify_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft = "25dp"
		        android:text = "verify"/>
   		</LinearLayout>
    	
	    <Button 
	        android:id="@+id/create_person_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_marginTop = "20dp"
	        android:text = "create person"/>
        <Button 
	        android:id="@+id/delete_person_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text = "delete person"/>
        <Button 
	        android:id="@+id/add_face_to_person_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text = "add face to person"/>
        <Button 
	        android:id="@+id/remove_face_from_person_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text = "remove face from person"/>
        <Button 
	        android:id="@+id/get_person_info_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text = "get person info"/>
        <Button 
	        android:id="@+id/set_person_info_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text = "set person info"/>
	    <!-- ================ -->
        <Button 
	        android:id="@+id/create_group_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_marginTop = "20dp"
	        android:text = "create group"/>
        <Button 
	        android:id="@+id/delete_group_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text = "delete group"/>
        <Button 
	        android:id="@+id/add_person_to_group_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text = "add person to group"/>
        <Button 
	        android:id="@+id/remove_person_from_group_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text = "remove person from group"/>
        <Button 
	        android:id="@+id/get_group_info_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text = "get group info"/>
        <Button 
	        android:id="@+id/set_group_info_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text = "set group info"/>
   	</LinearLayout>

    

</LinearLayout>